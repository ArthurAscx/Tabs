<%- include("./partials/head") %>

    <body>
        <%- include("./partials/header") %>
            <div class="container-login">
                <form action="/usuario/editar/<%= user.idUser%>?_method=PUT" method="POST" enctype="multipart/form-data"
                    class="estiloForm">
                    <h3>Edición de Usuarios Registrados</h3>
                    <div class="estiloForm1">
                        <label for="firstName" class="estiloForm2">Nombre: </label>
                        <input type="text" name="firstName" id="firstName" value="<%=user.firstName%>"
                            class="estiloForm3">
                    </div>
                    <div class="estiloForm1">
                        <label for="lastName" class="estiloForm2">Apellido: </label>
                        <input type="text" name="lastName" id="lastName" value="<%=user.lastName%>" class="estiloForm3">
                    </div>
                    <div class="estiloForm1">
                        <label for="birthDate" class="estiloForm2">Fecha de nacimiento: </label>
                        <input type="date" name="birthDate" id="birthDate" value="<%=user.birthDate%>"
                            class="estiloForm3">
                    </div>
                    <div class="estiloForm1">
                        <label for="email" class="estiloForm2">Email: </label>
                        <input type="email" name="email" id="email" value="<%=user.email%>" class="estiloForm3">
                    </div>
                    <div class="estiloForm1">
                        <label for="password" class="estiloForm2">Contraseña: </label>
                        <input type="password" name="password" id="password""
                            class="estiloForm3">
                    </div>
                    <div class="estiloForm1">
                        <label for="idCategory" class="estiloForm2">Categoría:</label>
                        <select type="number" name="idCategory" id="idCategory" class="estiloForm3">
                            <% for(let i = 0; i < idCategory.length; i++) {%>
                                <option value="<%=idCategory[i].idCategory%>">
                                    <%=idCategory[i].name%>
                                </option>
                              <% } %>  
                        </select>
                    </div>
                    <div class="estiloForm1">
                        <label for="avatar" class="estiloForm2">Imagen de Perfil: </label>
                        <input type="file" name="avatar" id="avatar" class="estiloForm3" accept="image/*">
                    </div>

                    <div class="botones-registro">
                        <button type="submit" class="botonForm">Modificar</button>

                    </div>
                </form>
            </div>
            <%- include("./partials/footer") %>
    </body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
    crossorigin="anonymous"></script>
    </html>