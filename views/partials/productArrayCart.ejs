<% for (const discos of lista) { %>
    <article>
    <a href="/producto/detalle/<%= discos.idDisc%>"><img src="/img/productos/<%= discos.artwork %>"></a>
    <div class="datosDisco">
        <a href="/producto/detalle/<%= discos.idDisc%>" style="text-decoration: none; color:black"><h3><%= discos.title%></h3></a>
    <h4><%= discos.artist%></h4>
    <span>ID:<%= discos.idDisc%></span>
    <span>$<%= discos.price %></span>
</div>
    <div class="cantidadesCarrito">
        <label>Cantidad:</label>
        <select name="Cantidad" class="control">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        </div>
        <button class="botonEliminar">Eliminar</button>          
</article>
<% } %>