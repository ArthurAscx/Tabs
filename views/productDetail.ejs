<%- include("./partials/head") %>

    <body>
        <%- include("./partials/header") %>
            <div class="container-login">
                <div class="detalle">
                    <article>
                        <img src="/img/productos/<%= disco.artwork %>">
                        <div class="info-producto">
                            <h1>
                                <%= disco.title %>
                            </h1>
                            <div class="precio-artista-genero">
                                <h3>
                                    Precio: $<%= disco.price %>
                                </h3>
                                <h3>
                                    Genero: <%= disco.idGenre %> - Artista:<%= disco.idArtist %>
                                </h3>
                            </div>
                            <div class="botones-detalle">
                                <button class="botonForm agregar_carrito">Añadir al carrito</button>
                                <button class="botonForm">Añadir a lista de destacado</button>
                            </div>
                            <p>
                                <%= disco.description %>
                            </p>
                        </div>
                        <form action="/producto/borrar/<%= disco.idDisc %>?_method=DELETE" method="POST">
                            <button type="submit" class="botonForm">Eliminar</button>
                        </form>
                        <a href="/producto/edicion/<%= disco.idDisc %>"><button class="botonForm">Editar</button></a>
                    </article>
                </div>
            </div>
            <%- include("./partials/footer") %>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
            crossorigin="anonymous"></script>
                </html>